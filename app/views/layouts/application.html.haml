!!! html
%html
  %head
    %meta{ :name => "Charset", :content => "UTF-8" }
    %meta{ :name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=2.0; user-scalable=1;" }
    - if @pagedescription
      %meta{ :name => "Description", :content => "#{@pagedescription}" }
    %title="#{@pagetitle}"
    =javascript_include_tag "application", "jquery-1.9.1", "jquery-ui-1.10.1.custom", "jquery.colorbox-min"
    =stylesheet_link_tag "application", "colorbox"
    %noscript="You must have javascript enabled to view this site."


  %body
    #wrapper.clearfix
      = yield